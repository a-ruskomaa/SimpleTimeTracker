<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<VBox>
			<children>
            <Label text="Haluatko varmasti poistaa merkinnän?">
               <VBox.margin>
                  <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
               </VBox.margin>
            </Label>
				<HBox>
					<children>
						<Label prefWidth="70.0" text="Aloitus">
							<HBox.margin>
								<Insets left="30.0" right="10.0" />
							</HBox.margin>
						</Label>
                  <Label fx:id="startTimeLabel" text="dd.mm.yyyy hh:mm:ss" />
					</children>
				</HBox>
				<HBox>
					<children>
						<Label prefWidth="70.0" text="Lopetus:">
							<HBox.margin>
								<Insets left="30.0" right="10.0" />
							</HBox.margin>
						</Label>
                  <Label fx:id="endTimeLabel" text="dd.mm.yyyy hh:mm:ss" />
					</children>
				</HBox>
				<HBox>
					<children>
						<Label prefWidth="70.0" text="Kesto:">
							<HBox.margin>
								<Insets left="30.0" right="10.0" />
							</HBox.margin>
						</Label>
                  <Label fx:id="durationLabel" text="hh:mm:ss" />
					</children>
				</HBox>
				<HBox prefHeight="28.0" prefWidth="289.0">
					<children>
						<Button fx:id="deleteButton" disable="false" onAction="#handleDeleteButton" text="Poista merkintä">
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
							<HBox.margin>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</HBox.margin>
						</Button>
						<Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButton" text="Peruuta">
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
							<HBox.margin>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</HBox.margin>
						</Button>
					</children>
               <padding>
                  <Insets left="30.0" right="30.0" />
               </padding>
				</HBox>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</VBox>
	</children>
</AnchorPane>
